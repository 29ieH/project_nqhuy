<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../utils/link.ejs')%>
</head>
<body>
    <div style="display: flex;justify-content: center;">
    <div style="width: 1080px;">
            <%- include('../part/header.ejs') %>
            <h3 class="my-3 text-center" >Games in Shop</h3>
            <div style="margin-top: 60px;">
                <div class="container text-center">
                    <div class="row">
                    <%
                        var data = data ? data : [];
                        data.forEach(product => {
                    %>
                    <div class="col">
                        <div class="card" style="width: 18rem;">
                            <img src="<%=product.img%>" class="card-img-top" alt="...">
                            <div class="card-body" style="text-align: left;">
                              <h5 class="card-title">Name: <%=product.name%></h5>
                              <p class="card-text">Developer: <%=product.developer%></p>
                              <p class="card-text">Price: <%=product.price%></p>
                              <button id="button-product" onclick="addProduct('<%=product._id%>')" class="btn btn-primary">Add Cart</button>
                            </div>
                          </div>
                      </div>
                    <% }) %>            
                    </div>
                  </div>
            </div>
        </div>
    </div>
    <script>
        addProduct = (id) => {
        console.log("abc")
        const options = {
            method:'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify({id})
        }
        fetch("/cart/addproduct",options).catch(err => {
            console.log(err)
        }).then(() => {
            alert("Add product successfully !")
        })
    }
    </script>
</body>
</html>